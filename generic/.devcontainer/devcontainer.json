{
    "name": "Generic-Ubuntu",
    "runArgs": [
        "--name", "generic-ubuntu"
    ],
    "mounts" : [
        "source=${localWorkspaceFolder}/.devcontainer,target=/opt/.host/.devcontainer,type=bind,readonly",
        "source=${localEnv:HOME}/.ssh,target=/opt/.host/.ssh,type=bind,readonly",
        "source=${localEnv:HOME}/.gitconfig,target=/opt/.host/.gitconfig,type=bind,readonly"
    ],
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceMount": "source=${localEnv:HOME}/workspace,target=/opt/workspace,type=bind",
    "workspaceFolder": "/opt/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cpptools-themes"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": null,
        "WAYLAND_DISPLAY": null
    },
    "onCreateCommand": "bash /opt/.host/.devcontainer/on_create_command.sh",
    "postStartCommand": "bash /opt/.host/.devcontainer/post_start_command.sh"
}
